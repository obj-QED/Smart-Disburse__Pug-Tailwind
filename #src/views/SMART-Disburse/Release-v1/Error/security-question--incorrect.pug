//- Info
//- Title
mixin info__title()
    .info__title
        h1.text-3xl.font-normal.text-gray-800
            block
//- Body
mixin info__content()
    .info__content.text-sm.text-gray-500.font-normal.mt-4.mb-6
        block

//- Icons
mixin icon-arrow__right(className)
    svg(xmlns='http://www.w3.org/2000/svg' width='18' height='10' viewbox='0 0 18 10' fill='none' class=className)
        path(d='M13.1667 1.66666L16.5 4.99999M16.5 4.99999L13.1667 8.33332M16.5 4.99999L1.5 4.99999' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')


doctype html
include ../#includes/meta.pug

body.max-w-screen-lg.m-auto.font-inter.container.relative.bg-gray-100
    .step(class="md:flex md:bg-none bg-dark-blue relative  md:max-h-full")
        include ../#parts/navigation-step.pug
        section.flex.flex-col.justify-between.content.bg-white.rounded-tl-20p.rounded-tr-20p.min-h-80vh(class="md:rounded-none md:w-8/12 md:min-h-full pt-9 px-4 pb-4 md:p-10 lg:p-14")
            .step-section
                .info
                    +info__title()
                        span Let’s make sure</br><b class="font-bold">it’s you!</b>
                    +info__content()
                        p To collect your <b class="font-medium text-gray-800">[PaymentTypeText]</b>, please give us a couple details
                section.form-step.mt-6
                    .border.border-gray-300.rounded-10p.px-5.py-7.fieldset-block
                        fieldset.field.claim-field.relative.mb-6
                            .field-item.flex
                                .block.relative
                                    span.flex-shrink-0.h-5.w-5.relative.flex.items-center.justify-center
                                        span.absolute.h-4.w-4.rounded-full.bg-red-100
                                        span.relative.block.w-2.h-2.bg-red-500.rounded-full
                                    span.absolute.top-6.-ml-px.bg-gray-200.h-full(class='w-0.5 left-2.5' aria-hidden='true')
                                .line.w-full.flex.flex-wrap(class='ml-3.5')
                                    label.text-sm.text-gray-700.mb-1(for='claim') Your claim number
                                    span.input-data.w-full.block.text-gray-500.text-sm
                                    .line.w-full.flex.flex-wrap
                                        .flex.line-input.relative.w-full
                                            input#first_name.w-full.block.inputdow-sm.border-red-300.rounded-md(type='text' name='first_name' autocomplete='given-name' class='focus:ring-red-500 focus:border-red-500 sm:text-sm focus:text-red-900 sm:text-sm')
                                            .field-btn.text-primary-light-blue.font-medium.text-base.uppercase.p-2.cursor-pointer(class='ml-2.5 hover:opacity-90') ok
                                            .absolute.right-12.inset-y-0.pr-3.flex.items-center.pointer-events-none
                                                svg.h-5.w-5.text-red-500(x-description='Heroicon name: solid/exclamation-circle' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true')
                                                    path(fill-rule='evenodd' d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z' clip-rule='evenodd')
                                        .hidden.error.text-xs.text-red-900.mt-1(class='w-11/12')   This field is required. Please fill in your answer.
                        fieldset.js-first-error.field.claim-field.relative.mb-5
                            .field-item.flex
                                .block.relative
                                    span.flex-shrink-0.h-5.w-5.relative.flex.items-center.justify-center
                                        span.absolute.h-4.w-4.rounded-full.bg-white
                                        span.relative.block.w-2.h-2.bg-red-500.rounded-full
                                    span.absolute.top-5.-ml-px.bg-gray-200.h-full(class='w-0.5 left-2.5' aria-hidden='true')
                                .line.w-full.flex.flex-wrap(class='ml-3.5')
                                    label.text-sm.text-gray-700.mb-1(for='ssn') The last 4-digits of your SSN number
                                    span.input-data.w-full.block.text-gray-500.text-sm
                                    .line.w-full.flex.flex-wrap
                                        .flex.line-input.relative.w-full
                                            input#first_name.w-full.block.inputdow-sm.border-red-300.rounded-md(type='text' name='first_name' autocomplete='given-name' class='focus:ring-red-500 focus:border-red-500 sm:text-sm focus:text-red-900 sm:text-sm')
                                            .field-btn.text-primary-light-blue.font-medium.text-base.uppercase.p-2.cursor-pointer(class='ml-2.5 hover:opacity-90') ok
                                            .absolute.right-12.inset-y-0.pr-3.flex.items-center.pointer-events-none
                                                svg.h-5.w-5.text-red-500(x-description='Heroicon name: solid/exclamation-circle' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true')
                                                    path(fill-rule='evenodd' d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z' clip-rule='evenodd')
                                        .hidden.error.text-xs.text-red-900.mt-1(class='w-11/12')   This field is required. Please fill in your answer.
                        fieldset.js-last-error.field.claim-field.relative.mb-6
                            .field-item.flex
                                .block.relative
                                    span.flex-shrink-0.h-5.w-5.relative.flex.items-center.justify-center
                                        span.absolute.h-4.w-4.rounded-full.bg-white
                                        span.relative.block.w-2.h-2.bg-red-500.rounded-full
                                .line.w-full.flex.flex-wrap(class='ml-3.5')
                                    label.text-sm.text-gray-700.mb-1(for='zip-code') Your mailing zip code
                                    span.input-data.w-full.block.text-gray-500.text-sm
                                    .line.w-full.flex.flex-wrap
                                        .flex.line-input.relative.w-full
                                            input#first_name.w-full.block.inputdow-sm.border-red-300.rounded-md(type='text' name='first_name' autocomplete='given-name' class='focus:ring-red-500 focus:border-red-500 sm:text-sm focus:text-red-900 sm:text-sm')
                                            .field-btn.text-primary-light-blue.font-medium.text-base.uppercase.p-2.cursor-pointer(class='ml-2.5 hover:opacity-90') ok
                                            .absolute.right-12.inset-y-0.pr-3.flex.items-center.pointer-events-none
                                                svg.h-5.w-5.text-red-500(x-description='Heroicon name: solid/exclamation-circle' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true')
                                                    path(fill-rule='evenodd' d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z' clip-rule='evenodd')
                                        .hidden.error.text-xs.text-red-900.mt-1(class='w-11/12')   This field is required. Please fill in your answer.
                    .error-notice.mt-6.rounded-md.bg-red-50.p-4.rounded-10p.flex
                        .flex
                            .flex-shrink-0
                                // Heroicon name: solid/x-circle
                                svg.h-5.w-5.text-red-400.cursor-pointer.stroke-red-error(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor' aria-hidden='true')
                                    path(fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z' clip-rule='evenodd')
                            .ml-3
                                h3.text-sm.font-normal.text-red-800
                                    | One of the submitted answers is invalid. You have [x] out of [y] attempts remaining.
                
                    .flex.justify-end.items-center.pt-6.pb-6.mb-4.js-next-step(class="md:mt-0 md:pb-0 md:mt-0 md:mb-0")
                        button.hidden.mr-auto.bg-white.border.border-gray-300.justify-center.inline-flex.items-center.px-6.w-full.shadow-sm.text-base.font-medium.text-gray-700.rounded-md(class='hover:opacity-90 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:primary-light-blue md:w-64 py-3' type='button')
                            | Back
                        button.btn-step-next.justify-center.inline-flex.items-center.px-6.w-full.shadow-form.text-base.font-medium.text-white.rounded-md(class='bg-btn-form hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:primary-light-blue md:w-64 py-3' style='min-height:50px' type='button')
                            | Next
                            +icon-arrow__right('ml-3.5')

    include ../#includes/footer.pug
include ../#includes/scripts.pug
script(src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js')
