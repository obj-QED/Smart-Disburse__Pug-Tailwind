//- Info
//- Title
mixin info__title()
    .info__title
            h1.text-3xl.font-normal.text-gray-800
                block
//- Body
mixin info__content()
    .info__content.text-sm.text-gray-500.font-normal.mt-4.mb-4
            block

doctype html
include ../#includes/meta.pug

body.max-w-screen-lg.m-auto.font-inter.container.relative.bg-gray-100
    .step(class="md:flex md:bg-none bg-dark-blue relative  md:max-h-full")
        //- Navigation btn
        mixin list(classItem, classPoint)
            li.item(class= classItem class= classPoint)
                block
                
        .heading(class="md:hidden")
            include ../#parts/navigation-step--mobile.pug
        .menu.bg-menu.justify-center.flex-wrap.min-h-screen.hidden(class="md:w-4/12 md:flex")
            .sticky.flex.justify-between.flex-col.h-full.max-h-screen.top-0.min-w-220p(class="md:pt-10 md:pb-14  lg:pt-14 lg:pb-18")
                .block
                    include ../#parts/menu__accordion.pug
                    ul.menu-nav
                        +list('flex mb-6 items-center')
                            a.flex.items-center.cursor-default
                                svg.h-5.w-5.text-white(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor')
                                    path(fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd')
                                span(class="text-sm font-medium text-white ml-3 ml-4") Confirm Identity
                        +list('mb-6')
                            a.flex.items-center.cursor-default
                                span(class="flex-shrink-0 h-5 w-5 relative flex items-center justify-center")
                                    span(class="absolute h-4 w-4 rounded-full bg-white bg-opacity-10")
                                    span(class="relative block w-2 h-2 bg-white rounded-full")
                                span(class="text-sm font-medium text-white ml-4") Review Documents
                        +list('flex mb-6 items-center opacity-30')
                            a.flex.items-center.cursor-default
                                span(class="flex-shrink-0 h-5 w-5 relative flex items-center justify-center bg-transparent rounded-full")
                                    .span(class="h-2 w-2 bg-gray-300 rounded-full")
                                span(class="text-sm font-medium text-white ml-4") Provide Signature
                        +list('flex mb-6 items-center opacity-30')
                            a.flex.items-center.cursor-default
                                span(class="flex-shrink-0 h-5 w-5 relative flex items-center justify-center bg-transparent rounded-full")
                                    .span(class="h-2 w-2 bg-gray-300 rounded-full")
                                span(class="text-sm font-medium text-white ml-4") Receive Payment
                        +list('flex mb-6 items-center opacity-30')
                            a.flex.items-center.cursor-default
                                span(class="flex-shrink-0 h-5 w-5 relative flex items-center justify-center bg-transparent rounded-full")
                                    .span(class="h-2 w-2 bg-gray-300 rounded-full")
                                span(class="text-sm font-medium text-white ml-4") Complete Payment
                .copyright.flex.items-end.justify-center.w-full
                    img.min-w-max(src="../../img/logo__copyright.svg", alt="logo footer", srcset="")
                    span.font-medium.text-xs.mx-1.text-white.opacity-40
                        | Powered by
                    a(href="https://www.transcard.com/" target="_blank")
                        img(src="../../img/logo__transcard__white.svg", alt="Transcard", srcset="")
        section.flex.flex-col.justify-between.content.bg-white.rounded-tl-20p.rounded-tr-20p.min-h-80vh(class="md:rounded-none md:w-8/12 md:min-h-full pt-9 px-4 pb-4 md:p-10 lg:p-14 md:pb-9")
            .step-block.w-full
                .info
                    +info__title()
                        span Review your <b class="font-bold">[DocumentsHeaderText]</b>
                    +info__content()
                        p Please select to review the documents below before proceeding with your payment
                    .accordion
                        .item.p-4.rounded-6p.bg-gray-50
                            .item__heading.flex.items-center.justify-between.cursor-pointer
                                .title.flex.items-center
                                    svg.h-4.w-4.text-primary-light-blue(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                                        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z')
                                    .ml-2.text-sm.text-black.font-medium [DocumentsHeaderText] 
                                svg.h-5.w-5.arrow-top.delay-150.duration-300.ease(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='#6B7280')
                                    path(fill-rule='evenodd' d='M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z' clip-rule='evenodd')
                            .item__content.text-sm.text-gray-500.font-normal(class="mt-2.5")
                                | [DocumentMessage]
                .attachment.mt-4
                    .title.text-gray-600.font-medium.text-xs.uppercase Attachments
                    .item.flex.border.rounded-xl.border-gray-300.p-4(class="mt-2.5 cursor-pointer hover:border-gray-400")
                        .image.border-gray-300.border.border-solid.rounded-md.w-7.min-w-max
                            img(src="../../img/preview-doc.png", alt="preview", srcset="", class="p-0.5")
                        .info.w-full.ml-3.overflow-hidden
                            .title.text-base.text-gray-900.font-normal.text-parts-hide Document_Lorem_Ipsum_Dummy_Ipsum_Dummy
                            ul.details.text-xs.text-gray-500.font-normal.flex.mt-2.relative
                                li.format PDF
                                li.size.list-disc.ml-7 146.5 KB
                                li.flex.items-center.bg-green-100.rounded-xl(class="px-1 py-0.5 absolute right-0")
                                    svg(class="w-2.5" xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='#10B981')
                                        path(fill-rule='evenodd' d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z' clip-rule='evenodd')
                                    .text-green-800.text-xs-s Accepted
                    .item.flex.border.rounded-xl.border-gray-300.p-4(class="mt-2.5 cursor-pointer hover:border-gray-400")
                        .image.border-gray-300.border.border-solid.rounded-md.w-7.min-w-max
                            img(src="../../img/preview-doc.png", alt="preview", srcset="", class="p-0.5")
                        .info.w-full.ml-3.overflow-hidden
                            .title.text-base.text-gray-900.font-normal.text-parts-hide Document_Lorem_Ipsum_Dummy_Ipsum_Dummy
                            ul.details.text-xs.text-gray-500.font-normal.flex.mt-2.relative
                                li.format PDF
                                li.size.list-disc.ml-7 146.5 KB
                                li.flex.items-center.bg-green-100.rounded-xl(class="px-1 py-0.5 absolute right-0")
                                    svg(class="w-2.5" xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='#10B981')
                                        path(fill-rule='evenodd' d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z' clip-rule='evenodd')
                                    .text-green-800.text-xs-s Accepted
                    .item.flex.border.rounded-xl.border-red-300.p-4(class="mt-2.5 cursor-pointer hover:border-red-400")
                        .image.border-gray-300.border.border-solid.rounded-md.w-7.min-w-max
                            img(src="../../img/preview-doc.png", alt="preview", srcset="", class="p-0.5")
                        .info.w-full.ml-3.overflow-hidden
                            .title.text-base.text-gray-900.font-normal.text-parts-hide Document_Lorem_Ipsum_Dummy_Ipsum_Dummy
                            ul.details.text-xs.text-gray-500.font-normal.flex.mt-2.relative
                                li.format PDF
                                li.size.list-disc.ml-7 146.5 KB
                .error-notice.my-6.p-4.rounded-10p.flex.bg-red-50
                    .close.cursor-pointer
                        svg.h-5.w-5.text-red-400(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20' fill='currentColor' aria-hidden='true')
                            path(fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z' clip-rule='evenodd')
                    .info.text-red-800.font-normal.text-sm(class='ml-3.5')
                        span.w-full Please review all of the above documents and accept in order to proceed. Alternatively, you can dispute the payment and contact <b class="font-semibold">[ClientName].</b>
            .pt-6.js-next-step
                button.btn-step-next.justify-center.inline-flex.items-center.px-6.py-4.w-full.shadow-form.text-base.font-medium.rounded-md.bg-indigo-600.text-white(class='bg-btn-form hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:primary-light-blue mb-4' type='button')
                    | Accept
                button.mr-auto.bg-white.border.border-gray-300.justify-center.items-center.px-6.w-full.shadow-sm.text-base.font-medium.text-gray-700.rounded-md(class='hover:opacity-90 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:primary-light-blue py-3 mr-6 flex md:mt-4' type='button')
                    | Dispute

    include ../#includes/footer.pug
    include ../#includes/scripts.pug
    script.
        $('.item__heading').click(function(){
            $(this).closest('.accordion .item').find('.item__content').slideToggle(300).parent().find('.arrow-top').toggleClass('transform rotate-180');
            return false;
        });
