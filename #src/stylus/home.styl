.bg-home
    background-size cover
    background-repeat no-repeat
    overflow hidden
    &:before
        content ''
        background url(../img/notification__background__conctain.svg) no-repeat
        z-index 0
        position absolute
        top 0
        left 0;
        width 100%
        height 100%
        background-size cover
        @media(max-width 767px)
            content url(../img/notification__background.svg)
            background none
        @media(max-width:425px)
            top: -32px;
            left: -340px;
            transform: scale(0.7);
        @media(max-width 414px)
            left: -338px;
        @media(max-width:375px)
            top: -8px;
            left: -302px;
            transform: scale(0.6);
        @media(max-width:360px)
            left: -306px;
            top: -4px;
            transform: scale(0.65);
            opacity: .8;